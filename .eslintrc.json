{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./.tsconfig.json"
  },
  "plugins": [ "deprecation" ],
  "rules": {
    "deprecation/deprecation": "warn",
    "no-tabs": "error",
    "no-constant-condition": [
      "error",
      { "checkLoops": false }
    ],
    "no-unused-vars": [
      "off",
      { "vars": "global" }
    ],
    "indent": [
      "error",
      4
    ],
    "quotes": [
      "error",
      "double",
      { "avoidEscape": true }
    ],
    "semi": [
      "error",
      "always",
      { "omitLastInOneLineBlock": true }
    ]
  }
}